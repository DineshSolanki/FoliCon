<UserControl x:Class="IconLayout"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:model="clr-namespace:FoliconNative.Model"
             mc:Ignorable="d" 
              d:DesignHeight="256" d:DesignWidth="256" Background="#02FFFFFF" DataContext="{DynamicResource DummyIconLayoutViewModel}">
    <UserControl.Resources>
        <model:DummyIconLayoutViewModel x:Key="DummyIconLayoutViewModel"/>
    </UserControl.Resources>
    <Grid>
        <Image Source="{Binding FolderJpg}" RenderOptions.BitmapScalingMode="HighQuality" Grid.Row="0"/>
        <Grid Grid.Row="0">
            <Grid.RowDefinitions>
                <RowDefinition Height="*" />
                <RowDefinition Height="100" />
            </Grid.RowDefinitions>

            <Grid Grid.Row="1" Width="100" HorizontalAlignment="Right">
                <Image x:Name="Star" Source="../Model/star.png" RenderOptions.BitmapScalingMode="HighQuality" Grid.Row="0"/>
                <TextBlock Grid.Row="0" Text="{Binding Rating}" HorizontalAlignment="Center" VerticalAlignment="Center" FontFamily="Tahoma" FontWeight="Bold" FontSize="28" Margin="36,35,64,31"/>
            </Grid>
        </Grid>
    </Grid>
</UserControl>
