<hc:Window x:Class="FoliCon.Views.PrismWindow1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:prism="http://prismlibrary.com/"              
        xmlns:hc="https://handyorg.github.io/handycontrol"
             prism:ViewModelLocator.AutoWireViewModel="True">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Menu Bar -->
        <Menu Grid.Row="0" Background="#2D2D2D">
            <MenuItem Header="File"/>
            <MenuItem Header="Edit"/>
            <MenuItem Header="View"/>
            <MenuItem Header="Tools"/>
            <MenuItem Header="Help"/>
        </Menu>

        <!-- Main Content -->
        <Grid Grid.Row="1" Margin="20">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Current Folder Path -->
            <TextBlock Grid.Row="0" 
                       Text="Current folder: D:\Media\Movies Collection\Action\2024 Releases\HD Quality"
                       Foreground="#787878" 
                       Margin="0,0,0,20"/>

            <!-- Mode Selection -->
            <StackPanel Grid.Row="1" Margin="0,0,0,20">
                <TextBlock Text="Select Mode" 
                          FontWeight="Bold" 
                          Margin="0,0,0,10"/>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <RadioButton Content="Poster Mode" 
                                   Margin="0,0,20,0"/>
                    <RadioButton Content="Professional Mode"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal" Margin="0,0,0,15">
                    <RadioButton Content="Movies" 
                                Margin="0,0,20,0"/>
                    <RadioButton Content="TV Shows" 
                                   Margin="0,0,20,0"/>
                    <RadioButton Content="Music" 
                                Margin="0,0,20,0"/>
                    <RadioButton Content="Games" 
                                Margin="0,0,20,0"/>
                    <RadioButton Content="Books"/>
                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <Button Content="Browse"
                              
                              Style="{StaticResource ButtonPrimary}"
                              Margin="0,0,10,0"/>
                    <Button Content="Start Search"
                              
                              Style="{StaticResource ButtonSuccess}"/>
                </StackPanel>
            </StackPanel>

            <!-- Data Grid -->
            <DataGrid Grid.Row="2" 
                        AutoGenerateColumns="False">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Name" 
                                      Width="*"/>
                    <DataGridTextColumn Header="Status" 
                                      Width="120"/>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>

        <!-- Status Bar -->
        <StatusBar Grid.Row="2" Background="#2D2D2D">
            <StatusBarItem>
                <StackPanel Orientation="Horizontal">
                    <hc:LoadingCircle Margin="0,0,5,0"/>
                    <TextBlock Text="Processing..."/>
                </StackPanel>
            </StatusBarItem>
            <Separator/>
            <StatusBarItem>
                <TextBlock Text="156 / 384 icons processed"/>
            </StatusBarItem>
            <StatusBarItem HorizontalAlignment="Right">
                <StackPanel Orientation="Horizontal">
                    <Path Data="M21.726 15.402C20.714 12.31 18.312 10 15 10s-5.714 2.31-6.726 5.402C8.858 15.914 9.414 16 10 16h10c.586 0 1.142-.086 1.726-.598M3 19v-2h18v2M3 5v2h18V5" 
                          Fill="White" 
                          Width="16" 
                          Height="16"/>
                    <TextBlock Text="Connected" 
                              Margin="5,0,0,0"/>
                </StackPanel>
            </StatusBarItem>
        </StatusBar>
    </Grid>
</hc:Window>
